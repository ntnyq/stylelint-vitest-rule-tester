{
  "name": "stylelint-vitest-rule-tester",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.14.4",
  "description": "Styelint rule tester with Vitest.",
  "keywords": [
    "rule-tester",
    "stylelint",
    "vitest"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/stylelint-vitest-rule-tester#readme",
  "repository": "ntnyq/stylelint-vitest-rule-tester",
  "bugs": {
    "url": "https://github.com/ntnyq/stylelint-vitest-rule-tester/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "dev": "tsup --watch src",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0",
    "vitest": "^1.0.0 || ^2.0.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.3.1",
    "postcss": "^8.4.49",
    "stylelint": "^16.11.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.8.1",
    "@ntnyq/prettier-config": "^1.22.0",
    "@vitest/coverage-v8": "^2.1.8",
    "bumpp": "^9.8.1",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
