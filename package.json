{
  "name": "stylelint-vitest-rule-tester",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.4.1",
  "description": "Styelint rule tester with Vitest.",
  "keywords": [
    "rule-tester",
    "stylelint",
    "vitest"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/stylelint-vitest-rule-tester#readme",
  "repository": "ntnyq/stylelint-vitest-rule-tester",
  "bugs": {
    "url": "https://github.com/ntnyq/stylelint-vitest-rule-tester/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "dev": "tsup --watch src",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0",
    "vitest": "^1.0.0 || ^2.0.0 || ^3.0.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.6.0",
    "deepmerge": "^4.3.1",
    "postcss": "^8.5.3"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.0.0-beta.8",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.6",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "postcss-html": "^1.8.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.2",
    "stylelint": "^16.14.1",
    "stylelint-scss": "^6.11.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
