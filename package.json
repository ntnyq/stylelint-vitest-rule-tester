{
  "name": "stylelint-vitest-rule-tester",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.4",
  "description": "Styelint rule tester with Vitest.",
  "keywords": [
    "rule-tester",
    "stylelint",
    "vitest"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/stylelint-vitest-rule-tester#readme",
  "repository": "ntnyq/stylelint-vitest-rule-tester",
  "bugs": {
    "url": "https://github.com/ntnyq/stylelint-vitest-rule-tester/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "dev": "tsup --watch src",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0",
    "vitest": "^1.0.0 || ^2.0.0 || ^3.0.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.4.5",
    "postcss": "^8.5.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.12.3",
    "@ntnyq/prettier-config": "^1.22.1",
    "@vitest/coverage-v8": "^3.0.1",
    "bumpp": "^9.10.1",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "postcss-html": "^1.8.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.4.2",
    "stylelint": "^16.13.2",
    "stylelint-scss": "^6.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.1"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
