{
  "name": "stylelint-vitest-rule-tester",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.6.3",
  "description": "Styelint rule tester with Vitest.",
  "keywords": [
    "rule-tester",
    "stylelint",
    "vitest"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/stylelint-vitest-rule-tester#readme",
  "repository": "ntnyq/stylelint-vitest-rule-tester",
  "bugs": {
    "url": "https://github.com/ntnyq/stylelint-vitest-rule-tester/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "coverage": "vitest --coverage",
    "dev": "unbuild --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm publish",
    "release:version": "bumpp",
    "stub": "unbuild --stub",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0",
    "vitest": "^1.0.0 || ^2.0.0 || ^3.0.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.6.1",
    "deepmerge": "^4.3.1",
    "postcss": "^8.5.3"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.0.2",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "postcss-html": "^1.8.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-scss": "^6.11.1",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
